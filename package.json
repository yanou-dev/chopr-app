{
  "name": "chopr",
  "version": "0.1.0",
  "description": "A modern desktop application for visualizing logs from various sources",
  "main": "build/electron.js",
  "homepage": "./",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently \"npm run dev:electron\" \"npm run dev:react\"",
    "dev:electron": "tsc -p electron.tsconfig.json && electron .",
    "dev:react": "cross-env BROWSER=none react-app-rewired start",
    "electron:build": "cross-env NODE_ENV=production npm run build && electron-builder -mwl",
    "build": "react-app-rewired build && tsc -p electron.tsconfig.json",
    "check-types": "tsc --noEmit",
    "test": "react-app-rewired test",
    "postinstall": "patch-package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yanou-dev/chopr-app.git"
  },
  "bugs": {
    "url": "https://github.com/yanou-dev/chopr-app/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/yanou-dev"
  },
  "keywords": [
    "logs",
    "visualization",
    "desktop",
    "electron",
    "react",
    "typescript"
  ],
  "build": {
    "appId": "dev.yanou.Chopr",
    "productName": "Chopr",
    "copyright": "Copyright Â© 2025 yanou.dev()",
    "files": [
      "build/**/*",
      "!node_modules"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "icon": "public/AppIcon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64",
            "universal"
          ]
        }
      ],
      "category": "public.app-category.utilities",
      "darkModeSupport": true,
      "electronLanguages": [
        "en",
        "fr"
      ]
    },
    "win": {
      "icon": "public/AppIcon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "electronLanguages": [
        "en",
        "fr"
      ]
    },
    "linux": {
      "icon": "public/AppIcon.icns",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "category": "Utility",
      "synopsis": "A modern desktop application for visualizing logs",
      "description": "A modern desktop application for visualizing logs from various sources",
      "desktop": {
        "entry": {
          "Name": "Chopr",
          "Comment": "Log visualization tool",
          "Categories": "Utility;Development"
        }
      },
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "electronLanguages": [
        "en",
        "fr"
      ]
    },
    "dmg": {
      "icon": "public/AppIcon.icns",
      "title": "${productName}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Chopr",
      "menuCategory": "Chopr"
    },
    "appImage": {
      "license": "LICENSE.md",
      "category": "Utility"
    }
  },
  "author": "yanou.dev() <yanis.kerriou@gmail.com> (https://yanou.dev)",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^7.0.2",
    "@mui/material": "^7.0.2",
    "@mui/x-data-grid": "^8.1.0",
    "@mui/x-data-grid-pro": "^8.1.0",
    "jszip": "^3.10.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.1",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@types/node": "^22.15.17",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "customize-cra": "^1.0.0",
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "jest": "^27.5.1",
    "patch-package": "^8.0.0",
    "postinstall-postinstall": "^2.1.0",
    "react-app-rewired": "^2.2.1",
    "terser-webpack-plugin": "^5.3.14",
    "typescript": "^5.8.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "private": false
}
